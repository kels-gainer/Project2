<!-- nav bar -->
<div class="wrapper">
  <header>
    <svg viewBox="0 0 800 600" class="">
      <path d="M300,220 C300,220 520,220 540,220 C740,220 640,540 520,420 C440,340 300,200 300,200" class="top_bar" />

      <path d="M300,320 L540,320" class="middle_bar" />

      <path d="M300,210 C300,210 520,210 540,210 C740,210 640,530 520,410 C440,330 300,190 300,190" class="bottom_bar"
        transform="translate(480, 320) scale(1, -1) translate(-480, -318)" />
    </svg>
    <a href="/" class="logo"><img src="/images/MyMEME2.png" class="header-logo"></a>
  </header>
  {{!-- Removed class: below-content for now --}}
    <div class= "container">
    
      <h1 class="text-center text-uppercase" style="color: white">My Memes</h1>
      <div class="row">
        {{#each dbMemes}}
            <div class="col-sm memeItem">
              <button class="button button-unlike meme-button" instanceimageurl="{{instanceImageUrl}}" id="{{id}}">
                <i class="fa fa-heart"></i><span> Favorite</span>
                {{!-- <span>Like</span> --}}
              </button> 
              <a href ="#" data-toggle="modal" data-target="#memeModal{{id}}"><img class="meme" src="{{instanceImageUrl}}" title="{{displayName}}"></a>

              <!-- MODAL -->
              <div class="modal fade" id="memeModal{{id}}" role="dialog">
                  <div class="modal-dialog modal-dialog-centered">
          
                  <!-- Modal content-->
                  <div class="modal-content">
                    <div class="modal-header">
                      <h4 class="modal-title">
                          <span id="memeTitle">{{displayName}}</span>
                      </h4>
                    </div>
                    <div class="modal-body">
                            <img src="{{instanceImageUrl}}" style="width: 100%">
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                  </div>
          
                </div>
              </div>
              <!-- END MODAL -->
            
            </div>
        {{/each}}
      </div>
    

    </div>
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="#" data-toggle="modal" data-target="#authModal">Account</a></li>
      {{!-- Updated these buttons to default to the auth modal if not logged in --}}
      <li><a href="#" data-toggle="modal" data-target="#authModal" id="myMemes">My Memes</a></li>
      <li><a href="#" data-toggle="modal" data-target="#authModal" id="createMeme">Create Meme</a></li>
      <li><a href="#" data-toggle="modal" data-target="#authModal" id="memeWars">Meme Wars</a></li>
      <li><a href="#" class="menu-sign-out" data-toggle="modal" data-target="#authModal" id="menu-6">Sign Out</a></li>
    </ul>
  </nav>
  
</div>

<!-- AUTH MODAL -->
<div class="modal fade" id="authModal" role="dialog">
  <div class="modal-dialog modal-dialog-centered">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><i class="fas fa-user-circle"></i> <span id="quickstart-sign-in-status">Unknown</span>
        </h4>
      </div>
      <div class="modal-body">
        <h5>Welcome</h5>
        <span id="welcome-account">
          <p>Enter an email and password below and either sign in to an existing account or sign up</p>
        </span>
        <!-- Input fields go here -->
        <input class="mdl-textfield__input" type="text" id="email" name="email" placeholder="Email" />
        <br>
        <input class="mdl-textfield__input" type="password" id="password" name="password" placeholder="Password" />
        <br /><br />
        <button class="mdl-button mdl-js-button mdl-button--raised" id="quickstart-sign-in" name="signin">Sign
          In</button>
        &nbsp;&nbsp;&nbsp;
        <button class="mdl-button mdl-js-button mdl-button--raised" id="quickstart-sign-up" name="signup">Sign
          Up</button>
        <br><br>
        <button class="mdl-button mdl-js-button mdl-button--raised" disabled id="quickstart-verify-email"
          name="verify-email">Send
          Email Verification</button>
        &nbsp;&nbsp;&nbsp;
        <button class="mdl-button mdl-js-button mdl-button--raised" id="quickstart-password-reset"
          name="verify-email">Send
          Password Reset Email</button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

<div class="wrapper">
    <div id="content"></div>
</div>
